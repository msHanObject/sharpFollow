<div class="container"> 
    <div class="row"> 
    <div class="col s12">
    <div style="padding-top:5px">
      
    <nav>
    <div class="nav-wrapper">
      <form>
        <div class="input-field">
          
         <div class= "purple">
          <label class="label-icon" for="search"><i class="material-icons">search</i></label>
            <%= form_tag(posts_path, :method => "get", id: "search-form") do %>
            <%= text_field_tag :search, params[:search], palceholder: "Search Posts"%>
            <% @new_chip %>
            <%end%>
         </div> 
        </div>
      </form>
    </div>
  </nav>
  </div>
  </div>
  
  <div class="col s15 m12">
    <div style="padding-top:5px">
      
          <form>
            <div class="input-field">
              <div class =" white">
              <% @chips.each do |chip| %>
                <div class="chip">
                  <%= chip.content %>
                  <%= link_to "X",chip_path(chip.id), method: "delete"  %>
                </div>
              <% end %>  
              </div>
            </div>
          </form>
     
    </div>
  </div>

  
        <div class="col s12 m3"> 
        
            <div class="card"> 
            <div class ="container">
           
                <div class="card-image"> 
                    <img src="<%= current_user.avatar.url%>" />
                   
                </div> 
                </div>
                <div class="card-content"> 
                    <div class="card-title"><%= current_user.name %></div> 
                    <p>이메일 : <%= current_user.email %></p> 
                    <p>올린 글 개수 : <%= @posts_count %></p> 
                    <p>팔로워 : <%= current_user.followers.length %></p>
                    <p>팔로잉 : <%= current_user.followings.length %></p>
                    <%= link_to new_post_path do %> 
                        <button class="btn">글 쓰기</button> 
                    <% end %> 
                </div> 
            </div> 
        </div> 
        
        <div class="col s12 m9"> 
            <% @posts.each do |post| %>
            <%= render partial: "post", object: post%>
            <% end %> 
        </div> 
    </div> 
</div>

